extends ./tpl/_layout.pug

block variables
    -
        var title = 'Контакты'
        var description = 'Контакты'
        var index = false


include ./components/_breadcrumbs.pug
include ./components/_socials

block content 
    +breadcrumbs(['Главная', 'Контакты'], true)
    .container
        .contacts-row.row.row--m 
            .cols.cols-5.cols-md-12
                .contacts-info
                    h1 Контакты
                    .contacts-list 
                        .contact
                            p.contact__label ТЕЛЕФОН
                            a.contact__content(href="tel:+79991234567")
                                svg.contact__content-icon 
                                    use(xlink:href="img/sprite.svg#phone")
                                span +7 999 123-45-67
                        .contact
                            p.contact__label ПОЧТА
                            a.contact__content(href="mailto:hello@olafa.ru")
                                svg.contact__content-icon 
                                    use(xlink:href="img/sprite.svg#email")
                                span hello@olafa.ru
                        .contact
                            p.contact__label АДРЕС
                            p.contact__content
                                svg.contact__content-icon 
                                    use(xlink:href="img/sprite.svg#location")
                                span г. Иркутск, ул. Советская, 27

                        .hide-md
                            +socials()
            .cols.cols-7.cols-md-12
                .map-wrap
                    <iframe src="https://yandex.ru/map-widget/v1/-/CCUUuOeb0A" width="560" height="400" frameborder="1" allowfullscreen="true" style="position:relative;"></iframe>

                .hide.show-md
                    .contact-social
                        +socials()
    include ./sections/m-form
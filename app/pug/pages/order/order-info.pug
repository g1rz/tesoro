include ../../components/fields/_tabs-radio

-
    var ship = [
        {
            label: 'СДЭК',
            value: 'sdek'
        }, {
            label: 'Почта России',
            value: 'ru_post'
        }, {
            label: 'Самовывоз',
            value: 'self_take'
        }
    ]

    var pay = [
        {
            label: 'При получении',
            value: 'cash'
        }, {
            label: 'Онлайн',
            value: 'online'
        }
    ]

.form-order-info 
    .info-group
        p.info-group__title Покупатель
        .info-group-fields 
            .info-group-fields__wrap
                input.field-input(type="text", name="user_firstname", placeholder="Имя")
            .info-group-fields__wrap
                input.field-input(type="text", name="user_lastname", placeholder="Фамилия")
            .info-group-fields__wrap
                input.field-input(type="text", name="user_phone", placeholder="Телефон")
            .info-group-fields__wrap
                input.field-input(type="email", name="user_email", placeholder="E-mail")
    // END info-group

    .info-group
        p.info-group__title Адрес
        .info-group-fields 
            .info-group-fields__wrap
                .field-select-wrapper
                    select.field-select(name="user_country")
                        option(value="none", hidden="") Страна
                        option(value="1") Страна1
                        option(value="2") Страна2
                        option(value="3") Страна3
                        option(value="4") Страна4
                        option(value="5") Страна5
            .info-group-fields__wrap
                .field-select-wrapper
                    select.field-select(name="user_city")
                        option(value="none", hidden="") Город
                        option(value="1") Город1
                        option(value="2") Город2
                        option(value="3") Город3
                        option(value="4") Город4
                        option(value="5") Город5
            .info-group-fields__wrap
                input.field-input(type="text", name="user_zipcode", placeholder="Индекс")
            .info-group-fields__wrap
                input.field-input(type="text", name="user_street", placeholder="Улица")
            .info-group-fields__wrap
                input.field-input(type="text", name="user_house", placeholder="Дом/Строение")
            .info-group-fields__wrap
                input.field-input(type="text", name="user_office", placeholder="Квартира/Офисца")
    // END info-group

    .info-group
        p.info-group__title Способ доставки
        +tabs-radio('ship', ship)
    // END info-group
    .info-group
        p.info-group__title Способ оплаты
        +tabs-radio('pay', pay)
    // END info-group
            
    .info-group
        p.info-group__title Комментарии к заказу
        textarea.form__textarea.form__textarea--bigger(placeholder="Ваши пожелания к доставке", name="user_comment")
    // END info-group

// END form-order-info